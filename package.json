{
  "name": "mailgate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "dev:api": "turbo dev --filter=@mailgate/api",
    "dev:inboxrules": "turbo dev --filter=@mailgate/inboxrules",
    "dev:dashboard": "turbo dev --filter=@mailgate/dashboard",
    "db:generate": "pnpm --filter=@mailgate/api db:generate",
    "db:push": "pnpm --filter=@mailgate/api db:push",
    "db:studio": "pnpm --filter=@mailgate/api db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0"
}
